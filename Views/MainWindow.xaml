<Window x:Class="VLSMCalculator.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:controls="clr-namespace:VLSMCalculator.Controls"
        Title="VLSM Calculator Pro" 
        Height="900" 
        Width="1400"
        MinHeight="700"
        MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        ui:WindowHelper.UseModernWindowStyle="True">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{ui:ThemeResource SystemControlBackgroundAccentBrush}"
                CornerRadius="8"
                Padding="20,15"
                Margin="0,0,0,20">
            <TextBlock Text="VLSM Calculator Pro - Network Architect" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>
          <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Input Panel -->
            <ui:SimpleStackPanel Grid.Column="0" Spacing="20" Margin="0,0,20,0">
                  <!-- Network Configuration Card -->
                <Border Background="{ui:ThemeResource SystemControlBackgroundChromeMediumBrush}"
                        BorderBrush="{ui:ThemeResource SystemControlForegroundBaseMediumLowBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20">
                    
                    <ui:SimpleStackPanel Spacing="20">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🌐" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Network Configuration" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- Network Input -->
                        <ui:SimpleStackPanel Spacing="8">                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Base Network" FontWeight="Medium" VerticalAlignment="Center"/>
                                <TextBlock Text="*" Foreground="Red" 
                                           FontWeight="Bold" Margin="2,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBox x:Name="NetworkInput" 
                                     Text="192.168.1.0/24"
                                     ui:ControlHelper.PlaceholderText="e.g., 192.168.1.0/24, 10.0.0.0/16"
                                     FontFamily="Consolas"
                                     FontSize="14"
                                     Padding="12,8"
                                     TextChanged="NetworkInput_TextChanged"/>
                            <TextBlock Text="Enter the base network in CIDR notation" 
                                       FontSize="12"
                                       Foreground="{ui:ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                        </ui:SimpleStackPanel>
                        
                        <!-- Host Requirements -->
                        <ui:SimpleStackPanel Spacing="8">                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Host Requirements" FontWeight="Medium" VerticalAlignment="Center"/>
                                <TextBlock Text="*" Foreground="Red" 
                                           FontWeight="Bold" Margin="2,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBox x:Name="HostRequirementsInput" 
                                     Text="50,25,10,5"
                                     ui:ControlHelper.PlaceholderText="e.g., 100,50,25,10"
                                     FontFamily="Consolas"
                                     FontSize="14"
                                     Padding="12,8"
                                     TextChanged="HostRequirementsInput_TextChanged"/>
                            <TextBlock Text="Comma-separated list of required hosts per subnet (largest first)" 
                                       FontSize="12"
                                       Foreground="{ui:ThemeResource SystemControlForegroundBaseMediumBrush}"
                                       TextWrapping="Wrap"/>
                        </ui:SimpleStackPanel>
                        
                        <!-- Auto-update toggle -->
                        <CheckBox x:Name="AutoUpdateCheckBox" 
                                  Content="Auto-update results" 
                                  IsChecked="True"
                                  Checked="AutoUpdateCheckBox_Changed"
                                  Unchecked="AutoUpdateCheckBox_Changed"/>
                        
                        <!-- Buttons -->
                        <ui:SimpleStackPanel Spacing="10" Orientation="Horizontal">
                            <Button x:Name="CalculateButton" 
                                    Content="🔄 Calculate VLSM" 
                                    Click="CalculateButton_Click"
                                    Style="{ui:StaticResource AccentButtonStyle}"
                                    MinWidth="140"
                                    Padding="15,8"/>
                            
                            <Button x:Name="ClearButton" 
                                    Content="🗑️ Clear" 
                                    Click="ClearButton_Click"
                                    MinWidth="90"
                                    Padding="15,8"/>
                        </ui:SimpleStackPanel>
                        
                        <!-- Error Message -->
                        <Border x:Name="ErrorPanel"                                Background="{ui:ThemeResource SystemControlErrorBackgroundBrush}"
                                BorderBrush="Red"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12,8"
                                Visibility="Collapsed">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚠️" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock x:Name="ErrorMessage" 
                                           Text="" 
                                           Foreground="Red" 
                                           TextWrapping="Wrap"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ui:SimpleStackPanel>
                </Border>
                  <!-- Instructions Card -->
                <Border Background="{ui:ThemeResource SystemControlBackgroundChromeMediumBrush}"
                        BorderBrush="{ui:ThemeResource SystemControlForegroundBaseMediumLowBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20">
                    
                    <ui:SimpleStackPanel Spacing="15">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="💡" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Quick Guide" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <ui:SimpleStackPanel Spacing="12">
                            <StackPanel Orientation="Horizontal">
                                <Border Background="{ui:ThemeResource SystemControlBackgroundAccentBrush}"
                                        CornerRadius="10"
                                        Width="20"
                                        Height="20"
                                        Margin="0,0,10,0">
                                    <TextBlock Text="1" 
                                               FontSize="11" 
                                               FontWeight="Bold" 
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Enter your base network in CIDR notation"
                                           VerticalAlignment="Center"
                                           TextWrapping="Wrap"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <Border Background="{ui:ThemeResource SystemControlBackgroundAccentBrush}"
                                        CornerRadius="10"
                                        Width="20"
                                        Height="20"
                                        Margin="0,0,10,0">
                                    <TextBlock Text="2" 
                                               FontSize="11" 
                                               FontWeight="Bold" 
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="List host requirements (largest subnet first)"
                                           VerticalAlignment="Center"
                                           TextWrapping="Wrap"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <Border Background="{ui:ThemeResource SystemControlBackgroundAccentBrush}"
                                        CornerRadius="10"
                                        Width="20"
                                        Height="20"
                                        Margin="0,0,10,0">
                                    <TextBlock Text="3" 
                                               FontSize="11" 
                                               FontWeight="Bold" 
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Results update automatically as you type"
                                           VerticalAlignment="Center"
                                           TextWrapping="Wrap"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <Border Background="{ui:ThemeResource SystemControlBackgroundAccentBrush}"
                                        CornerRadius="10"
                                        Width="20"
                                        Height="20"
                                        Margin="0,0,10,0">
                                    <TextBlock Text="4" 
                                               FontSize="11" 
                                               FontWeight="Bold" 
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="View visual network topology in diagram tab"
                                           VerticalAlignment="Center"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </ui:SimpleStackPanel>

                        <Border Background="{ui:ThemeResource SystemControlBackgroundChromeLowBrush}"
                                CornerRadius="6"
                                Padding="12,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💡" FontSize="12" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Tip: Use private IP ranges like 192.168.0.0/16 or 10.0.0.0/8"
                                           FontSize="12"
                                           Foreground="{ui:ThemeResource SystemControlForegroundBaseMediumBrush}"
                                           VerticalAlignment="Center"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </ui:SimpleStackPanel>
                </Border>
                
            </ui:SimpleStackPanel>
              <!-- Results and Diagram Panel with Tabs -->
            <TabControl Grid.Column="1" 
                        Background="{ui:ThemeResource SystemControlBackgroundChromeMediumBrush}"
                        BorderBrush="{ui:ThemeResource SystemControlForegroundBaseMediumLowBrush}"
                        BorderThickness="1">
                
        <!-- Results Tab -->
        <TabItem Header="Subnet Details">
            <Border Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="VLSM Calculation Results" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   VerticalAlignment="Center"/>
                        <Border Background="{ui:ThemeResource SystemControlBackgroundAccentBrush}"
                                CornerRadius="12"
                                Padding="8,4"
                                Margin="15,0,0,0"
                                x:Name="SubnetCountBadge"
                                Visibility="Collapsed">
                            <TextBlock x:Name="SubnetCountText"
                                       Text="0 Subnets"
                                       FontSize="11"
                                       FontWeight="Medium"
                                       Foreground="White"/>
                        </Border>
                    </StackPanel>
                    
                    <!-- Modern Results Display -->
                    <ScrollViewer Grid.Row="1" 
                                  ui:ScrollViewerHelper.AutoHideScrollBars="True">
                        <StackPanel x:Name="ResultsPanel">
                            <!-- Placeholder content -->
                            <Border Background="{ui:ThemeResource SystemControlBackgroundChromeLowBrush}"
                                    CornerRadius="8"
                                    Padding="30"
                                    x:Name="PlaceholderPanel">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="🌐" 
                                               FontSize="48" 
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,15"/>
                                    <TextBlock Text="Enter network information and host requirements" 
                                               FontSize="16"
                                               FontWeight="Medium"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,5"/>
                                    <TextBlock Text="Results will appear here automatically as you type" 
                                               FontSize="14"
                                               Foreground="{ui:ThemeResource SystemControlForegroundBaseMediumBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </TabItem>
                
                <!-- Network Diagram Tab -->
                <TabItem Header="Network Diagram">
                    <Border Padding="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" 
                                       Text="Visual Network Topology" 
                                       FontSize="18" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,15"/>
                            
                            <Border Grid.Row="1" 
                                    Background="{ui:ThemeResource SystemControlBackgroundChromeLowBrush}"
                                    CornerRadius="8"
                                    BorderBrush="{ui:ThemeResource SystemControlForegroundBaseMediumLowBrush}"
                                    BorderThickness="1">
                                
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                              VerticalScrollBarVisibility="Auto"
                                              ui:ScrollViewerHelper.AutoHideScrollBars="True">
                                    
                                    <controls:NetworkDiagram x:Name="NetworkDiagramCanvas" 
                                                             Background="Transparent"
                                                             MinWidth="600" 
                                                             MinHeight="400"
                                                             Margin="10"/>
                                </ScrollViewer>
                            </Border>
                        </Grid>
                    </Border>
                </TabItem>
                
            </TabControl>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="{ui:ThemeResource SystemControlBackgroundChromeMediumBrush}"
                BorderBrush="{ui:ThemeResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Padding="15,8"
                Margin="0,20,0,0">
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="Ready" 
                           FontSize="12" 
                           VerticalAlignment="Center"/>
                
                <TextBlock Grid.Column="2" 
                           Text="NetKit VLSM Calculator" 
                           FontSize="12" 
                           VerticalAlignment="Center"
                           Foreground="{ui:ThemeResource SystemControlForegroundBaseMediumBrush}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
